<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/grey_bar"
        android:minHeight="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/qr_code_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:srcCompat="@drawable/qr_code_icon" />

        <ImageView
            android:id="@+id/see_other_cities_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6.59dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/current_city"
            app:layout_constraintStart_toEndOf="@+id/current_city"
            app:layout_constraintTop_toTopOf="@+id/current_city"
            app:srcCompat="@drawable/arrow_down_icon" />

        <TextView
            android:id="@+id/current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Москва"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="false"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">


                <HorizontalScrollView
                    android:id="@+id/banners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollIndicators="none"
                    app:layout_constraintTop_toBottomOf="@+id/categories">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pizza_banner_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza_banner_1" />

                        <ImageView
                            android:id="@+id/pizza_banner_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza_banner_1" />

                    </LinearLayout>

                </HorizontalScrollView>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <HorizontalScrollView
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:scrollIndicators="none"
                app:layout_collapseMode="pin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/pizza_category_button"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginEnd="8dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Пицца"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="13sp"
                        app:cornerRadius="6dp" />

                    <Button
                        android:id="@+id/combo_category_button"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginEnd="8dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Комбо"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="13sp"
                        app:cornerRadius="6dp" />

                    <Button
                        android:id="@+id/dessert_category_button"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginEnd="8dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Десерты"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="13sp"
                        app:cornerRadius="6dp" />

                    <Button
                        android:id="@+id/drinks_category_button"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginEnd="8dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Напитки"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="13sp"
                        app:cornerRadius="6dp" />

                </LinearLayout>

            </HorizontalScrollView>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:spanCount="1"
            tools:itemCount="10" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/grey_bar"
        app:itemIconSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>